<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    displayBlock="true"
    id="idInputs">
    <Label id="idInput1Label" text="{i18n>Value1}" labelFor="idInput1"/> 
    <Input id="idInput1" value="{ViewModel>/Value1}" valueState="{ViewModel>/ValueState1}" editable="{ViewModel>/editable}" width="20%" required="{ViewModel>/required}" placeholder="{i18n>InputPlaceholder}" valueStateText="{i18n>ValueStateText}" change="onInputChange"/> 
    <Label id="idInput2Label" text="{i18n>Value2}" labelFor="idInput1"/> 
    <Input id="idInput2" value="{ViewModel>/Value2}" valueState="{ViewModel>/ValueState2}" editable="{ViewModel>/editable}" width="20%" required="{ViewModel>/required}" placeholder="{i18n>InputPlaceholder}" valueStateText="{i18n>ValueStateText}" change="onInputChange"/> 
</core:FragmentDefinition>